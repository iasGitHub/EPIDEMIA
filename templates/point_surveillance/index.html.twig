{% extends 'index.html.twig' %}

{% block title %}Hello PointSurveillanceController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content">
			
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12" style="text-align:center;">
						<div class="card">
							<div class="card-header">
								<h2>Ajout d'un point de surveillance</h2>
							</div>
							<div class="card-body">
								<form action="{{path('insertPtSurv')}}" method="post">
									<div class="form-group">
										<label class="control-label">Code du point de surveillance</label>
										<input class="form-control" type="text" name="codePt" placeholder="saisir le nom de ce lieu">
									</div>
                                    <div class="form-group">
										<label class="control-label">Coordonnées du point de surveillance</label>
										<input class="form-control" type="text" name="coord" placeholder="saisir les coordonnées de ce lieu">
									</div>
									<div class="form-group">
										<select name="selectZone">
											<option>Choisir une zone</option>
											{% for var in listeZone %}
												<option value="{{var.id}}">{{var.nom}}</option>
											{% endfor %}
										</select>
									</div>

									<div class="form-group">
										<input class="btn btn-success" type="submit" name="ajout" value="AJOUTER">
										<input class="btn btn-danger" type="reset" name="annuler" value="ANNULER">
									</div>
								</form>
							</div>
							<div class="card-footer">
							</div>
						
						</div>
					</div>
				</div>
			</div>

            	
</div>
{% endblock %}
